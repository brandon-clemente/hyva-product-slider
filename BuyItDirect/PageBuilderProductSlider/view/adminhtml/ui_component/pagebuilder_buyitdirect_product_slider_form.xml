<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_buyitdirect_product_slider_form.pagebuilder_buyitdirect_product_slider_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Hyva Product Slider</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_buyitdirect_product_slider_form.pagebuilder_buyitdirect_product_slider_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_buyitdirect_product_slider_form</namespace>
    </settings>
    <dataSource name="pagebuilder_buyitdirect_product_slider_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/content-type/products/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_buyitdirect_product_slider_form_data_source"
                      class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <field name="appearance" formElement="select" sortOrder="10"
               component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">carousel</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">carousel</item>
                                <item name="title" xsi:type="string" translate="true">Carousel</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="sku" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="condition_operator" xsi:type="string">()</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Product SKUs</label>
                <dataScope>sku</dataScope>
                <visible>false</visible>
                <exports>
                    <link name="condition_operator">${ $.provider }:data.sku-condition_operator</link>
                </exports>
                <notice translate="true">Comma separated product SKUs.</notice>
                <elementTmpl>Magento_PageBuilder/form/element/input-no-maxlength</elementTmpl>
            </settings>
        </field>
        <field name="condition_option" sortOrder="20" formElement="select"
               component="Magento_PageBuilder/js/form/element/condition-options">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Select Products By</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <exports>
                    <link name="conditionVisible">${$.parentName}.conditions_form:visible</link>
                    <link name="skuVisible">${$.parentName}.sku:visible</link>
                    <link name="value">${$.parentName}.sort_order:filter</link>
                </exports>
                <dataScope>condition_option</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="size" xsi:type="string">small</item>
                                <item name="value" xsi:type="string">sku</item>
                                <item name="title" xsi:type="string" translate="true">SKU</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="size" xsi:type="string">small</item>
                                <item name="value" xsi:type="string">condition</item>
                                <item name="title" xsi:type="string" translate="true">Condition</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <htmlContent name="conditions_form" sortOrder="50"
                     template="Magento_PageBuilder/form/element/widget-conditions"
                     component="Magento_PageBuilder/js/form/element/html">
            <settings>
                <visible>false</visible>
                <additionalClasses>
                    <class name="admin__field">true</class>
                </additionalClasses>
            </settings>
            <block name="conditions_form"
                   class="Magento\PageBuilder\Block\Adminhtml\Form\Element\ProductConditions">
                <arguments>
                    <argument name="formNamespace" xsi:type="string">pagebuilder_buyitdirect_product_slider_form</argument>
                    <argument name="attribute" xsi:type="string">condition_source</argument>
                    <argument name="label" xsi:type="string" translate="true">Condition</argument>
                </arguments>
            </block>
        </htmlContent>
        <field name="sort_order" sortOrder="60" formElement="select" component="Magento_PageBuilder/js/form/element/select-filtered-options">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">position</item>
                    <item name="excludeOptions" xsi:type="array">
                        <item name="condition" xsi:type="string">position_by_sku,date_newest_top,date_oldest_top,sku_ascending,sku_descending,low_stock_first,high_stock_first</item>
                        <item name="sku" xsi:type="string">position,date_newest_top,date_oldest_top,sku_ascending,sku_descending,low_stock_first,high_stock_first</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Sort By</label>
                <dataScope>sort_order</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Catalog\Sorting\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <container name="product_count_group" component="Magento_Ui/js/form/components/group" sortOrder="70">
            <field name="products_count" sortOrder="20" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="componentDisabled" xsi:type="boolean">true</item>
                    </item>
                </argument>
            </field>
            <field name="carousel_products_count" sortOrder="10" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">12</item>
                    </item>
                </argument>
                <settings>
                    <dataType>number</dataType>
                    <label translate="true">Limit</label>
                    <additionalClasses>
                        <class name="admin__field-small">true</class>
                    </additionalClasses>
                    <dataScope>carousel_products_count</dataScope>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="less-than-equals-to" xsi:type="number">999</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">1</rule>
                    </validation>
                </settings>
            </field>
            <field name="product_totals" sortOrder="20" formElement="input" component="Magento_PageBuilder/js/form/element/product-totals">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="string">of ${ $.totalProductCount } total</item>
                        <item name="url" xsi:type="url" path="pagebuilder/form/element_producttotals"/>
                    </item>
                </argument>
                <settings>
                    <elementTmpl>Magento_PageBuilder/form/element/product-totals</elementTmpl>
                    <dataType>text</dataType>
                    <additionalClasses>
                        <class name="admin__field-product-tooltip">true</class>
                    </additionalClasses>
                    <tooltip>
                        <description translate="true">
                            <![CDATA[
                                <p>The products displayed may vary from this total due to several factors, including but not limited to:</p>
                                <ul>
                                    <li>Disabled status</li>
                                    <li>Visibility configuration (not visible in catalog)</li>
                                    <li>Stock availability (out of stock)</li>
                                    <li>Website assignment</li>
                                </ul>
                            ]]>
                        </description>
                    </tooltip>
                    <imports>
                        <link name="conditionOption">ns = ${ $.ns }, index = condition_option:value</link>
                        <link name="conditionValue">ns = ${ $.ns }, index = conditions_form:value</link>
                    </imports>
                    <listens>
                        <link name="${ $.ns }.${ $.ns }.appearance_fieldset.sku:value">updateProductTotals</link>
                    </listens>
                </settings>
            </field>
        </container>
    </fieldset>
    <fieldset name="settings" sortOrder="30">
        <settings>
            <label translate="true">Slider Settings</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="per_view" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">1,2,3,4</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Per View (sm, md, lg, xl)</label>
            </settings>
        </field>
        <field name="show_prices" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Show Prices</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="show_arrows" sortOrder="50" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Show Arrows</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="show_dots" sortOrder="60" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Dots</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
